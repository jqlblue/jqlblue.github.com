</span><span class='line'>    <span class="nb">var_dump</span><span class="p">(</span><span class="nv">$instance</span><span class="o">-&amp;</span><span class="nx">gt</span><span class="p">;</span><span class="nx">getObj</span><span class="p">());</span>
